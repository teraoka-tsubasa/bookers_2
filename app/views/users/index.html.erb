<% if @book.errors.any? %>
				    <div class="alert alert-danger">
				      <ul>
				      	 <h2>errors prohibited this obj from being saved:</h2>
				      <% @book.errors.full_messages.each do |message| %>

				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				<% end %>

<div class="body">
	<div class="container">
		<p id="notice"></p>
				<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image,
				 fallback: "no_image.jpg",size: "50x50" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<%= link_to(edit_user_path(current_user.id), class: "col-xs-12 btn btn-default") do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end -%>

				</div>

				<h2>New book</h2>
				<div>
					<%= form_for(@book, url: books_path) do |f| %>

					<h4>Title</h4>
					<%= f.text_field :title, class:"form-control" %>

					<h4>Opinion</h4>
					<%= f.text_area :body, class:"form-control" %>

					<%= f.submit %>


					<% end %>
				</div>

			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
					<tr class="new-table">
						<% @users.each do |user| %>
						<td></td>
						<td><%= attachment_image_tag user, :profile_image,
				 fallback: "no_image.jpg",size: "50x50" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "show",user_path(user.id)%></td>
					</tr>
						<% end %>
					</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
		</div>
	</div>
</footer>











