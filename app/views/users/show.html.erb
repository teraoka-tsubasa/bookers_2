

<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image,
				 fallback: "no_image.jpg",size: "50x50" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<td><%= @user.name %></td>
							<th></th>
						</tr>
						<tr>
							<th>introduction</th>
							<td><%= @user.introduction %></td>
							<th></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<div class="row">
					<%= link_to(edit_user_path(current_user.id), class: "col-xs-12 btn btn-default") do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end -%>

				</div>


				</div>
				<h2>New book</h2>
				<div>
					<%= form_for(@book, url: books_path) do |f| %>


					<h4>Title</h4>
					<%= f.text_field :title, class:"form-control" %>

					<h4>Opinion</h4>
					<%= f.text_area :body, class:"form-control" %>

					<%= f.submit %>


					<% end %>
				</div>

			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>    <th></th><th>Title</th><th>Opinion</th><th colspan="3"></th></tr>
					</thead>
					<tbody>
						<td></td>
						<% @books.each  do |book| %>
						<tr class="new-table">
						<td><%= attachment_image_tag @user, :profile_image,
				 fallback: "no_image.jpg",size: "50x50" %></td>
						<td><%= link_to book.title,book_path(book.id) %></td>
						<td><%= book.body %></td>
						<% end %>
					</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
		</div>
	</div>
</footer>











