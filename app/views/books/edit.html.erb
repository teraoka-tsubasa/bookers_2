
<div class="container">
  <p id="notice"></p>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                 <h2>errors prohibited this obj from being saved:</h2>
              <% @book.errors.full_messages.each do |message| %>

                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
        <% end %>
<%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title , class: "edit-title"%>
  <p>Body</p>
  <%= f.text_area :body , class: "edit-body"%>
  <br>
  <br>
  <%= f.submit "Update Book" %>
<% end %>

<p>
  <%= link_to "show", book_path %>

  <%= link_to "back", books_path %>
</p>
</div>
</div>


