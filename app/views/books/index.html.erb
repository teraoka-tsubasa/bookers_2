<% if @book.errors.any? %>
				    <div class="alert alert-danger">
				      <ul>
				      	 <h2>errors prohibited this obj from being saved:</h2>
				      <% @book.errors.full_messages.each do |message| %>

				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				<% end %>


<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image,
				 fallback: "no_image.jpg",size: "100x100" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<td><%= @user.name %></td>
						</tr>
						<tr>
							<th>introduction</th>
							<td><%= @user.introduction %></td>
						</tr>
					</tbody>
				</table>
				<div>
				<%= link_to "/users/#{current_user.id}/edit", class: "col-xs-12 btn btn-default" do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end -%>
				</div>

				<div>
					<h2>New book</h2>
					<%= form_for(@book) do |f| %>

					<h4>Title</h4>
					<%= f.text_field :title, class:"form-control" %>

					<h4>Opinion</h4>
					<%= f.text_area :body, class:"form-control" %>

					<%= f.submit %>
					<% end %>
				</div>

			</div>
			<div class="col-xs-9">
				<table class="table table-hover table-inverse">
					<h2>Books</h2>
					<thead>
						<tr><th></th><th>Title</th><th>Opinion</th><th colspan="3"></th></tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr><td>
							<%=link_to "/users/#{book.user.id}" do %>
							<%= attachment_image_tag @user, :profile_image,
				 fallback: "no_image.jpg",size: "50x50" %>
				 	<% end %>

				 </td></td><td><%= link_to book.title,"/books/#{book.id}" %></td><td><%= book.body %></td><td></td></tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
		</div>
	</div>
</footer>